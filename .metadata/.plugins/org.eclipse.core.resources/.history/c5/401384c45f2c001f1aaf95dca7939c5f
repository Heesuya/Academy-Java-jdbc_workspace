package kr.co.iei.member.model.service;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

import kr.co.iei.member.model.dao.MemberDao;
import kr.co.iei.member.model.model.vo.Member;

public class MemberService {

	public Member selectMemberId(String memberId) {
		//01-1. 반환할 객체 생성
		Connection conn = null;
		//02-2. 리턴할 객체 생성
		Member m = null;
		
		try {
			//1. Driver 등록 
			Class.forName("oracle.jdbc.driver.OracleDriver");
			//2. Connection 생성
			conn = DriverManager.getConnection("jdbc:oracle:thin:@172.0.0.1:1521:xe","jdbc_test","1234");
			m = memberDao.selectMemberId(conn, memberId);
			//DB작업이 다 끝난 상태인지 체크 
			//추가적인 DB작업이 있으면 -> conn을 재사용해서 DB 작업 수행
			//추가적인 DB작업이 없으면 -> commit, rollback 필요여부 확인 
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}finally {
			try {
				conn.close();
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
		return m;
	}
}
